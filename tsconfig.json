{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "types": [
      // add node as an option
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "paths": {
      // "@commands/*": [ "commands/*" ],
      // "@content/*": [ "content/*" ],
      // "@database/*": [ "database/*" ],
      // "@functions/*": [ "functions/*" ],
      // "@int/*": [ "int/*" ],
      // "@modules/*": [ "modules/*" ],
      // "@server/*": [ "server/*" ],
      // "@util/*": [ "util/*" ],
    }
  },
  "include": [
    "./src/**/*"
  ]
}