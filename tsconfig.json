{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "removeComments": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "types": [
      // add node as an option
      "node"
    ],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ]
}